server {
    listen 80;
    server_name {{ webserver_domain }};

    location / {
        return 301 https://$host$request_uri;
    }    

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}

server {
    listen 443 ssl;
    server_name {{ webserver_domain }};

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    } 

{% for wiki in tiddywikis %}
    location /{{ wiki.name }} {
        return 301 $uri/;
    }

    location /{{ wiki.name }}/ {
        proxy_pass              http://tiddywiki_{{ wiki.name }}:8090/;
        proxy_buffering         off;
        proxy_set_header        X-Real-IP        $remote_addr;
        proxy_set_header        X-Forwarded-For  $proxy_add_x_forwarded_for; 
    }
{% endfor %}

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    ssl_certificate /etc/letsencrypt/live/{{ webserver_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ webserver_domain }}/privkey.pem;

    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}